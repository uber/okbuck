@import java.util.Collection
@import java.util.Map
@args (
String buildToolsVersion,
String target,
String groovyHome,
String kotlinHome,
String scalaCompiler,
String scalaLibrary,
String proguardJar,
Collection defs
)
@if (valid(buildToolsVersion) && valid(target)) {

[android]
    build_tools_version = @buildToolsVersion
    target = @target
}
@if (valid(defs)) {

[buildfile]
    includes = @(String.join(" ", defs))
}
@if (valid(groovyHome)) {

[groovy]
    groovy_home = @groovyHome
}
@if (valid(kotlinHome)) {

[kotlin]
    kotlin_home = @kotlinHome
}
@if (valid(scalaCompiler) && valid(scalaLibrary)) {

[scala]
    compiler = //@(scalaCompiler):scala-compiler
    library = //@(scalaLibrary):scala-library
}
@if (valid(proguardJar)) {

[tools]
    proguard = @proguardJar
}
